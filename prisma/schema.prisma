// prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  // İleride şifreli giriş eklersek:
  passwordHash String?

  listings  Listing[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Listing {
  id         Int      @id @default(autoincrement())
  title      String
  description String?
  price      Decimal  @db.Decimal(10,2)
  images     Json                  // @default([]) KALDIRILDI
  sellerId   Int
  seller     User     @relation(fields: [sellerId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
